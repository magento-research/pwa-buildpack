{
  "name": "@magento/peregrine-magento2-connector",
  "version": "0.2.0",
  "description": "Build/Layout optimization tooling and Peregrine framework adapters for the Magento PWA",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist --ignore __tests__ --source-maps --copy-files",
    "lint": "eslint '*.js' 'src/**/*.js'",
    "test": "run-p jest:ci prettier:check lint",
    "test:dev": "jest --watch",
    "jest:ci": "jest -i --forceExit --testResultsProcessor=./node_modules/jest-junit-reporter",
    "prettier": "prettier --write 'src/**/*.js'",
    "prettier:check": "prettier-check 'src/**/*.js'"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magento-research/peregrine-magento2-connector.git"
  },
  "keywords": [
    "magento",
    "pwa",
    "babel",
    "webpack"
  ],
  "author": "Magento Commerce",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/magento-research/peregrine-magento2-connector/issues"
  },
  "homepage": "https://github.com/magento-research/peregrine-magento2-connector#readme",
  "devDependencies": {
    "@magento/eslint-config": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "dedent": "^0.7.0",
    "eslint": "^4.16.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "jest-junit-reporter": "^1.1.0",
    "memory-fs": "^0.4.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.8.1",
    "prettier-check": "^2.0.0",
    "react": "^16.1.1",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "@magento/directive-parser": "^0.1.1",
    "webpack-sources": "^1.1.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "__fixtures__"
    ]
  }
}
